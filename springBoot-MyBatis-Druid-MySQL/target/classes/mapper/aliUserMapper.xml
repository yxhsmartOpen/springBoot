<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baron.dao.Dao" >

<sql id="BASE_TABLE">
    timo.ali_user
</sql>

<sql id="ALI_USER_COLUMN">
    id,name,phone,id_card,age,is_sex,address,create_time,update_time
</sql>

<select id="selectUsers" resultType="com.baron.vo.AliUser" >
    SELECT
    <include refid="ALI_USER_COLUMN"/>
    FROM
    <include refid="BASE_TABLE"/>
</select>

<select id="selectUserByName" resultType="com.baron.vo.AliUser" >
    SELECT
    <include refid="ALI_USER_COLUMN"/>
    FROM
    <include refid="BASE_TABLE"/>
    <where>
        <if test="userName != null">
          name = #{userName, jdbcType=VARCHAR}
        </if>
    </where>
</select>

<select id="selectUserById" resultType="com.baron.vo.AliUser" >
        SELECT
        <include refid="ALI_USER_COLUMN"/>
        FROM
        <include refid="BASE_TABLE"/>
        <where>
            <if test="userId != null">
                id = #{userId, jdbcType=VARCHAR}
            </if>
        </where>
</select>
    <delete id="deleteOne">
        delete from timo.ali_user
        <where>
            <if test="userId != null">
                id = #{userId, jdbcType=VARCHAR}
            </if>
        </where>
    </delete>

</mapper>

