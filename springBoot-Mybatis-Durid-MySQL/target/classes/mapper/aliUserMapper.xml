<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baron.dao.Dao" >

<sql id="BASE_TABLE">
    timo.ALI_USER
</sql>
<sql id="INSERT_ORDER_TABLE">
    timo.ALI_ORDER
</sql>

<sql id="BASE_COLUMN">
    id,name,phone,IDCard,age,sex,address
</sql>
<sql id="INSERT_ORDER_COLUMN">
    id,userId,createDate,updateDate,status,orderDetail,remarks,name,groupId
</sql>

<insert id="insertOrder" parameterType="com.baron.vo.AliOrder">
        INSERT INTO
        <include refid="INSERT_ORDER_TABLE"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">

            <if test="userId != null">
                userId,
            </if>
            createDate,updateDate,status,orderDetail,remarks,name,groupId,
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="userId != null">
                #{userId, jdbcType=VARCHAR},
            </if>

            #{createDate, jdbcType=DATE},#{updateDate, jdbcType=DATE},#{status, jdbcType=INTEGER},
            #{orderDetail, jdbcType=VARCHAR}, #{remarks, jdbcType=VARCHAR},
            #{name, jdbcType=VARCHAR},#{groupId, jdbcType=INTEGER},

        </trim>
</insert>

<select id="selectUsers" resultType="com.baron.vo.AliUser" >
    SELECT
    <include refid="BASE_COLUMN"/>
    FROM
    <include refid="BASE_TABLE"/>
</select>

</mapper>

